<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10">

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="7"
        android:text="Nombre" />

</LinearLayout><!-- Al poner weight=10 en el Layout y luego 3 y 7 en los elementos Imagen y TextView, conseguimos una
distribución por porcentajes, la imagen tomará un 30% y el texto un 70%, esto es porque width=0dp -->