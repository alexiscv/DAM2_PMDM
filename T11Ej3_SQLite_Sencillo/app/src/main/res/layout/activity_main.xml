<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/listadoRegistros"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="addRegistro"
            android:text="AÃ‘ADIR" />

        <Button
            android:id="@+id/bMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="modRegistro"
            android:text="MODIFICAR" />

        <Button
            android:id="@+id/bDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="delRegistro"
            android:text="ELIMINAR" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="getRegistro"
            android:text="VER REGISTRO" />

        <Button
            android:id="@+id/bGet2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="getRegistros"
            android:text="VER REGISTROS" />

        <Button
            android:id="@+id/bTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="contarRegistros"
            android:text="TOTAL" />
    </LinearLayout>

    <Button
        android:id="@+id/bDatos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="cargarDatosPrueba"
        android:text="CARGAR DATOS PRUEBA" />

</LinearLayout>